<h2 class='mb-3'>Log in</h2>

<%= form_with(model: resource, url: user_session_path, class: 'parsley', method: :post, local: true) do |f| %>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: true, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions mb-2">
    <%= react_component("Button", { label: 'ログイン', class: 'btn btn-success' }) %>
  </div>
  <%= link_to 'パスワードを忘れた方はこちら', new_user_password_path %>
<% end %>
