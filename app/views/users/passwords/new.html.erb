<h2>Forgot your password?</h2>

<%= form_with(model: resource, url: user_password_path, class: 'parsley', method: :post, local: true) do |f| %>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', required: true, autofocus: true, autocomplete: "email" %>
    </div>
  </div>
  <div class="actions mb-2">
    <%= react_component("Button", { label: 'パスワードリセット', class: 'btn btn-success' }) %>
  </div>
<% end %>
