<h2>Change your password</h2>

<%= form_with(model: resource, url: user_password_path, class: 'parsley', method: :patch, local: true) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>
  </div>
  <div class="actions">
    <%= react_component("Button", { label: 'パスワード変更', class: 'btn btn-success' }) %>
  </div>
<% end %>
